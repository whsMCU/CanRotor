<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="6"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:text="상 태 표 시"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textArmed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_purple"
                android:gravity="center"
                android:text="ARMED"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textARMED"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_purple"
                android:gravity="center"
                android:text="모드"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textMODE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp"/>

            <TextView
                android:id="@+id/textHeadfree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_purple"
                android:gravity="center"
                android:text="HeadFree"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textHEADFREE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textCycleTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:text="CycleTime"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textCYCLETIME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:text="TEMP"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textTEMP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textVolt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:text="VOLT"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textVOLT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textAlt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:text="고도"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textALT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textTest1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:text="-"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textTEST1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textTest2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:text="-"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textTEST2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:text="ROLL"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/ROLL_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:text="PITCH"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/PITCH_View"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:text="YAW"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/YAW_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textROLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="R_ROLL"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Radio_ROLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textPITCH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="R_PITCH"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Radio_PITCH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textYAW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="R_YAW"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Radio_YAW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textTHROT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="R_THROT"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Radio_THROT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textGEAR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="R_GEAR"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Radio_GEAR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textAUX1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="R_AUX1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/Radio_AUX1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:text="Drone_Error"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/drone_Error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />

            <TextView
                android:id="@+id/textTelemetry_Error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:text="Tele_Error"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/telemetry_Error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeStepGranularity="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="통신정지 중"
                android:textOn="통신 중"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_Reset"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="리셋"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_ACCcalibration"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="ACC_CALIB"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button_MAGcalibration"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="MAG_CALIB"
                android:textSize="10sp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        </TableRow>

    </TableLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>